<div class="content has-text-centered">
  <h1 class="h1">Patient cards</h1>
  <title> Patient cards </title>
</div>

<div class="container is-widescreen has-text-centered is-center ">

  <% column_names = @doctor_patients.column_names %>
  <div class="table-container is-align-items-center is-align-content-center is-justify-content-center is-centered" id="patient_cards">
    <table class="table  is-centered">
      <thead>
      <tr>
        <% column_names.each do |column_name| %>
          <td><%= column_name.humanize %></td>
        <% end %>
        <td>Action</td>
      </tr>

      </thead>
      <tbody>

      <% @doctor_patients.each do |patient_card| %>
        <tr>
          <% column_names.each do |column| %>
            <td><%= patient_card.send(column) %></td>
          <% end %>
          <td><%= link_to "Show this patient_card", patient_card %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <div>
      <% if @page != 0 %>
        <%= link_to "Previous page", patient_cards_path(page: @page - 1), { class: "button" } %>
      <% end %>
      <% @all = PatientCard.all%>
      <% if (@page+1)*10 < @all.length() %>
        <%= link_to "Next page", patient_cards_path(page: @page + 1), { class: "button" } %>
      <% end %>
    </div>
  </div>
</div>

<%= link_to "New patient_card", new_patient_card_path, { class: "button" } %>


